    </div>

    <footer>
        © 2026 Pizzeria LA TOMBOLA 90 | 
        <a onclick="showImpressum()" href="#impressum">Impressum</a>
    </footer>

    <script>
        async function fetchSheetData() {
            const url = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vQ4iarO4GDUatu19QSFTPOOty6Xkl9QjWDP-MINEMEXH4ZxmZZFTujUxOSxPOsNk2Fd1iKtfmRsF1F-/pub?gid=0&single=true&output=csv';
            const container = document.getElementById('tagesangebote-container');
            try {
                const response = await fetch(url);
                const csvText = await response.text();
                const lines = csvText.split(/\r?\n/).filter(l => l.trim() !== "");
                container.innerHTML = "";
                for (let i = 1; i < lines.length; i++) {
                    const cols = lines[i].match(/(".*?"|[^",;]+)(?=\s*[,;]|\s*$)/g);
                    if (cols && cols.length >= 2) {
                        const name = cols[0].replace(/"/g, "").trim();
                        const preis = cols[1].replace(/"/g, "").trim();
                        const beschr = cols[2] ? cols[2].replace(/"/g, "").trim() : "";
                        container.innerHTML += `<div class="menu-item"><h3>${name} <span style="float:right">${preis}</span></h3><p>${beschr}</p></div>`;
                    }
                }
            } catch (e) {
                container.innerHTML = "<p style='grid-column: 1/-1; text-align:center;'>Angebote konnten nicht geladen werden.</p>";
            }
        }
        fetchSheetData();

        function showImpressum() { document.getElementById('impressum').style.display = 'block'; }

        const circle = document.getElementById('number-circle');
        function tombola() {
            const inter = setInterval(() => { circle.innerText = Math.floor(Math.random()*91); }, 70);
            setTimeout(() => { clearInterval(inter); circle.innerText = "90"; setTimeout(tombola, 5000); }, 5000);
        }
        tombola();

        let cur = 0;
        const imgs = document.querySelectorAll('.slider-box img');
        if(imgs.length > 0) {
            setInterval(() => {
                imgs[cur].classList.remove('active');
                cur = (cur + 1) % imgs.length;
                imgs[cur].classList.add('active');
            }, 3500);
        }
    </script>
</body>
</html>